@model IEnumerable<StoreManagement.Web.Areas.BasicData.ViewModels.Product.ProductViewModel>

@{
    ViewBag.Title = "نمایش کالا";
}

<h2> لیست کالا ها </h2>

<p>
    <a href="@Url.Action(MVC.BasicData.Product.Create())" class="btn btn-success btn-sm"> کالای جدید </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>

                <div>
                    @Html.ActionLink("جزئیات", MVC.BasicData.Product.Details(item.Id), new { @class = "btn btn-info btn-xs" })
                    @Html.ActionLink("ویرایش", MVC.BasicData.Product.Edit(item.Id), new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("حذف", MVC.BasicData.Product.Delete(item.Id), new { @class = "btn btn-danger btn-xs" })
                    <!--
                    <a href="/product/details" class="btn btn-info btn-xs"> جزئیات </a>
                    <a href="/product/edit" class="btn btn-warning btn-xs"> ویرایش </a>
                    <a href="/product/delete" class="btn btn-danger btn-xs"> حذف </a>
                        -->
                </div>
            </td>
        </tr>
    }
</table>


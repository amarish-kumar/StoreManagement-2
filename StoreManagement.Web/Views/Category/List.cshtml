@model IEnumerable<StoreManagement.Web.ViewModels.Category.CategoryViewModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.ActionLink("جدید","Create", "Category", null, new { @class = "btn btn-success" })
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new {  id=item.Id},new { @class = "btn btn-sm btn-primary" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - فروشگاه ما</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand text-center" href="~/">مدیریت فروشگاه</a>
            </div>
            <ul class="nav navbar-nav">
                @*<li><a href="/product/list">  کالا ها  </a></li>
                    <li><a href="#">تماس با ما</a></li>
                    <li><a href="#">درباره</a></li>*@
            </ul>
            <!--  -->
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" id="navbartb" class="form-control" placeholder="Search">
                </div>
                <button type="button" class="btn btn-primary" onclick="search_for_navbar();"> جستجو </button>
            </form>
            <!--  -->
        </div>
    </nav>

    <!--    -->


    <div class="container body-content">

        <div class="row">
            <div class="col-md-3">
                <ul class="list-group">
                    @foreach (var link in ComponentManager.GetAllLinks())
                    {
                        <li class="list-group-item">
                            <a href="@Url.Action(link.ActionName, link.ControllerName, new { Area = link.AreaName })">
                            @link.Title
                            </a>
                        </li>
                    }
                </ul>

            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - فروشگاه</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script type="text/javascript">
    function search_for_navbar() {
        document.location = "/home/index?param=" + $("#navbartb").val();    //*/
    }
</script>